{
  "version": 3,
  "configurePresets": [
    {
      "name": "clang-sanitizers",
      "hidden": false,
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "ENABLE_SANITIZERS": "ON"
      }
    }
  ]
}
